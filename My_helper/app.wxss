
/**app.wxss**/

page {
  background: #efefef;
}
.container {
  font-family: "Microsoft YaHei";
  font-size: 26rpx;
  color: #333;
  height: 100%;
  display: flex;
  flex-direction: column;
  /*align-items: center;
  justify-content: space-between;*/
  box-sizing: border-box;
}

/*** common ***/
.mr10{
  margin-right: 10rpx;
}
.mr20 {
  margin-right: 20rpx;
}

.mt20{
  margin-top: 20rpx;
}
.mb50{
  margin-bottom: 50px;
}

.hide{
  display: none !important;
}

.t-head{
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.t-head-txt{
  margin-left: 5px;
}
.bg_gray{
  background: #ccc;
}
.fc_gray{
  color: #999;
}
.txt_l{
  text-align: left !important;
}

/*** icon ***/
.ic-min{
  width: 40rpx;
  height: 40rpx;
}
.ic-mini{
  width:30rpx;
  height: 30rpx;
}
.ic_eq{
    width : 65rpx;
    height: 64rpx;
}

/*** btn ***/
.btn-bar-center{
  padding: 40rpx;
  text-align: center;
}

.btn-bar-both{
  display: flex;
  align-items: center;
}
.btn-bar-both-right{
  padding-right: 10rpx;
  justify-content: flex-end;
}

.btn-bar-table > .btn{
  margin: 0 10rpx;
}

.btn{
  font-size: 32rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 4rpx #ccc;
}
.btn-max{
  display: inline-block;
  width: 200rpx;
}
.btn-min{
  height: 32px;
  line-height: 32px;
}
.btn-primary{
  background: #7e57c2;
  color:#fff;
}
.btn-default{
  background: #fff;
  color:#333;
}
.btn-gray{
  background: #e8e8e8;
  color:#333;
}

/*** table ***/
table{
  display: flex;
  flex-direction: column;
  width:100%;
  background: #fff;
}
tr{
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 10px;
}
tr:not(:last-child):after{
  position: absolute;
  left: 5%;
  bottom:0;
  width:90%;
  content : "";
  height:3rpx;
  background: #ddd;

}
td{
  padding: 10rpx 0;
  text-align: center;
}
.thead {
  font-weight: bolder;
}

.td-t{
  flex: .6;
}
.td-p{
  flex: .4;
}
.td-n{
  flex: .6;
}
.td-l{
  flex: .3;
}
.td-pic{
  display: flex;
  align-items: center;
}
.td-pic image{
  margin-right: 20rpx;
}
.total{
    position: fixed;
    bottom: 0;
    left: 0;
    background: #bbb;
    color: #333;
}

/*** form ***/
input{
  font-size: 26rpx;
  font-family: "Microsoft YaHei";
}
.form{
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
}
.form-error{
  margin: 20rpx;
  color: red;
  text-align: center;
  line-height: 30px;
  border: 1px dashed red;
}
.form-item{
  position: relative;
  padding: 0 20rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.form-item:not(:first-child)::after{
  position: absolute;
  left: 2%;
  top: 0;
  content: "";
  height: 1px;
  width: 94%;
  background: #eee;
}
form-item:last-child{
  margin-bottom: 20rpx;
}
.form-label{
  padding-left: 10rpx;
  height: 48px;
  line-height: 48px;
  width: 80rpx;
  flex-grow: 1;
}
.form-input{
  flex-grow: 4;
  height: 48px;
  line-height: 48px;
}
.form-tips{
  color: #aaa;
  padding: 0 20rpx;
  font-size: 24rpx;
  text-align: center;
}
.form-placeholder{
  font-size: 26rpx;
  font-family: "Microsoft YaHei";
  color: #aaa;
}



