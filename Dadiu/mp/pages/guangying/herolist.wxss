/* pages/guangying/herolist.wxss */
page{
  font-size: 22rpx;
  font-family: "\5FAE\8F6F\96C5\9ED1";
}
.bg-fixed{
  position: fixed;
  z-index: -1;
  width: 750rpx;
  height: 1334rpx;
  background: url("http://www.goodmoba.com/m/images/fixed_bg.jpg") no-repeat center 0;
  background-size: 750rpx 1334rpx;
}


.list{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
}
.list-item{
  display: flex;
  flex-direction: column;
  width: 25%;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
  background: url("http://www.goodmoba.com/m/images/index_hero_photo_bg.png") no-repeat center 0;
  background-size: 150rpx 170rpx;
}
.list-item-pic{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto 20rpx;
}
.list-item-name{
  color: #f8d548;
  text-align: center;
}